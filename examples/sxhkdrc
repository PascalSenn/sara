# ###############
# general hotkeys
# ###############

# ###############
# spawn programs

super + t
	st

super + w
	firefox

super + f
	st -e vifm

super + r
	st -t "rcalc" -g 80x24+625+325 -e R --vanilla -q

# the echo call will draw dwm on the current monitor (haven't tested it on my multimonitor setup, yet :D)
super + d
	dmenu_run -m $(echo "${DISPLAY:1:2}") -b -l 4 -p "Run" -fn "Misc Termsyn:size=10" -nb "#282a36" -nf "#f8f8f2" -sb "#1E88E5" -sf "#202020"

super + Tab
	st -t "scratch" -g 240x72 -e /ibin/justtype.sh

# ###############
# Function key spawns

XF86MonBrightnessDown
	st -t "funkey" -e /bin/sbar/sbar_bright.sh -U 5

XF86MonBrightnessUp
	st -t "funkey" -e /bin/sbar/sbar_bright.sh -A 5

shift + XF86MonBrightnessDown
	st -t "funkey" -e /bin/sbar/sbar_bright.sh -U 1

shift + XF86MonBrightnessUp
	st -t "funkey" -e /bin/sbar/sbar_bright.sh -A 1

XF86AudioLowerVolume
	st -t "funkey" -e /bin/sbar/sbar_audio.sh - 5

XF86AudioRaiseVolume
	st -t "funkey" -e /bin/sbar/sbar_audio.sh + 5

shift + XF86AudioLowerVolume
	st -t "funkey" -e /bin/sbar/sbar_audio.sh - 1

shift + XF86AudioRaiseVolume
	st -t "funkey" -e /bin/sbar/sbar_audio.sh + 1

XF86AudioMute
	st -t "funkey" -e /bin/sbar/sbar_audio.sh mute

@Print
	st -t "funkey" -e scrot -q 100


# ###############
# sara hotkeys
# ###############

# ###############
# sara interfacing

# quit sara (kill X)
super + shift + e
	sarasock 'youviolatedmymother 0'

# ###############
# Client interfacing

# kill client
super + shift + q
	sarasock 'killclient 0'

# move focus down
super + j
	sarasock 'movefocus -1' 

# move focus up
super + k
	sarasock 'movefocus +1' 

# move client down
super + shift + j
	sarasock 'moveclient -1' 

# move client up
super + shift + k
	sarasock 'moveclient +1' 

# toggle client to floating
super + shift + space
	sarasock 'togglefloat 0' 

# toggle client to fullscreen
super + shift + Return
	sarasock 'togglefs 0' 

# promote client to master
super + Return
	sarasock 'zoom 0' 

# ###############
# Desktop interfacing

# view desktop
super + {1-8}
	sarasock 'view {0-7}'

# add client to desktop
super + shift + {1-8}
	sarasock 'toggledesktop {0-7}'

# add desktop to current view
super + control + {1-8}
	sarasock 'toggleview {0-7}'

# send client to just desktop
super + shift + control + {1-8}
	sarasock 'todesktop {0-7}'

# view all desktops
super + 0
	sarasock 'toggleview -1' 

# control master size
super + h
	sarasock 'changemsize -0.05' 

super + l
	sarasock 'changemsize +0.05' 

# set tiling layout
super + control + t
	sarasock 'setlayout tile' 

# set monocle layout
super + control + m
	sarasock 'setlayout monocle' 

# ###############
# Monitor interfacing

# switch focused monitor
super + comma
	sarasock 'focusmon -1' 

super + period
	sarasock 'focusmon +1' 

# send client to monitor
super + shift + comma
	sarasock 'tomon -1' 

super + shift + period
	sarasock 'tomon +1' 
